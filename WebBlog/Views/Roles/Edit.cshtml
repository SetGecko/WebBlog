@model WebBlog.Contracts.Models.Request.Role.EditRoleRequest


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <br />
<h4>Редактирование роли</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <br/>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                    <textarea class="form-control" id="exampleTextarea" rows="3" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                 <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index">Перейти к списку всех тегов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
